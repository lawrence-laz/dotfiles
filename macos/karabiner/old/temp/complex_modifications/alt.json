{
	"title": "Command -> Option (ALT)",
	"rules": [
		{
			"description": "PC style ALT",
			"manipulators": [
				{
					"conditions": [
						{
							"bundle_identifiers": [
								"^com\\.microsoft\\.rdc\\.macos$",
								"^net\\.kovidgoyal\\.kitty$",
								"^.*$"
							],
							"type": "frontmost_application_if"
						}
					],
					"from": {
						"key_code": "left_command",
						"modifiers": {
							"mandatory": [ ],
							"optional": [
								"any"
							]
						}
					},
					"to": [
						{
							"key_code": "left_option",
							"modifiers": [ ]
						}
					],
					"type": "basic"
				}
			]
		},

		{
			"description": "PC-style Alt+stuff",
			"manipulators": [
				{
					"conditions": [
						{
							"bundle_identifiers": [
								"^com\\.microsoft\\.rdc\\.macos$",
								"^net\\.kovidgoyal\\.kitty$",
								"^.*$"
							],
							"type": "frontmost_application_if"
						}
					],
					"from": {
						"key_code": "up_arrow",
						"modifiers": {
							"mandatory": [ "command" ]
						}
					},
					"to": [
						{
							"key_code": "up_arrow",
							"modifiers": [ "option" ]
						}
					],
					"type": "basic"
				}
			]
		},
		{
			"description": "Command + hjkl -> Options + hjkl",
			"manipulators": [
				{
					"type": "basic",
					"from": {
						"key_code": "h",
						"modifiers": {
							"mandatory": [ "command" ],
							"optional": [ "any" ]
						}
					},
					"to": [
						{ "key_code": "h", "modifiers": [ "option" ] }
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "j",
						"modifiers": {
							"mandatory": [ "left_command" ],
							"optional": [ "any" ]
						}
					},
					"to": [
						{ "key_code": "j", "modifiers": [ "left_option" ] }
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "k",
						"modifiers": {
							"mandatory": [ "command" ],
							"optional": [ "any" ]
						}
					},
					"to": [
						{ "key_code": "k", "modifiers": [ "option" ] }
					]
				},
				{
					"type": "basic",
					"from": {
						"key_code": "l",
						"modifiers": {
							"mandatory": [ "command" ],
							"optional": [ "any" ]
						}
					},
					"to": [
						{ "key_code": "l", "modifiers": [ "option" ] }
					]
				}
			]
		}
	]
}
